def is_perfect_square(n):
    if n < 0:          # Исправлено условие (n <= 0 → n < 0)
        return False
    if n == 0 or n == 1:  # Объединены проверки для 0 и 1
        return True

    low = 2
    high = n // 2      # Исправлено (high = n → high = n // 2)

    while low <= high:
        mid = (low + high) // 2
        mid_sq = mid * mid

        if mid_sq == n:
            return True
        elif mid_sq < n:
            low = mid + 1
        else:
            high = mid - 1

    return False
